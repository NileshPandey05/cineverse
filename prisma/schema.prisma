generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  name       String?
  email      String       @unique
  password   String
  favorites  Favorite[]
  watchlist  Watchlist[]
}

model Favorite {
  id      String @id @default(cuid())
  userId  String
  movieId String
  type    String
  user    User @relation(fields: [userId], references: [id])

  @@unique([userId, movieId, type]) // prevent duplicates
}

model Watchlist {
  id      String @id @default(cuid())
  userId  String
  movieId String
  type    String
  user    User @relation(fields: [userId], references: [id])

  @@unique([userId, movieId, type]) // prevent duplicates
}
